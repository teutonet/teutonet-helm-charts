{
  "extends": [
    "config:base"
  ],
  "assigneesFromCodeOwners": true,
  "assigneesSampleSize": 1,
  "platformAutomerge": true,
  "semanticCommitScope": "{{parentDir}}/dependencies",
  "additionalBranchPrefix": "{{parentDir}}-",
  "separateMinorPatch": true,
  "automerge": true,
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)values\\.yaml$"
      ],
      "matchStrings": [
        " {4}\\S+:\\n {6}url: (?<registryUrl>https://\\S+)\\n {6}charts:(?:\\s+\\S+: [0-9.x]+\\s)+",
        " {8}(?<depName>\\S+): (?<currentValue>\\S+)\\s"
      ],
      "matchStringsStrategy": "recursive",
      "versioningTemplate": "helm",
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": [
        "(^|/)values\\.yaml$"
      ],
      "matchStrings": [
        " {4}\\S+:\\n {6}url: oci://(?<ociUrl>\\S+)\\n {6}charts:(?:\\s+\\S+: [0-9.x]+\\s)+",
        " {8}(?<depName>\\S+): (?<currentValue>\\S+)\\s"
      ],
      "matchStringsStrategy": "recursive",
      "versioningTemplate": "helm",
      "datasourceTemplate": "docker",
      "registryUrlTemplate": "https://{{{ociUrl}}}"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "charts/stellio-context-broker/**"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchPackageNames": "registry-gitlab.teuto.net/4teuto/dev/teuto-portal/teuto-portal-k8s-worker/teuto-portal-k8s-worker",
      "hostRules": [
        {
          "matchHost": "https://registry-gitlab.teuto.net",
          "username": "github-renovate",
          "password": ""
        }
      ]
    }
  ]
}
