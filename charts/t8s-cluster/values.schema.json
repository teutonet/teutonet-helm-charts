{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "t8s cluster configuration",
  "properties": {
    "global": {
      "helmRepositories": {
        "type": "object",
        "description": "A map of helmRepositories to create, the key is the name",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "pattern": "https://.+"
            },
            "charts": {
              "type": "object",
              "description": "Which charts are deployed in which version using this repo, used internally",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "serviceLevelAgreement": {
          "type": "string",
          "enum": [
            "None",
            "24x7",
            "Working-Hours"
          ]
        },
        "customerID": {
          "type": "string"
        },
        "customerName": {
          "type": "string"
        },
        "supportProjectUrl": {
          "type": "string"
        },
        "configGroupUrl": {
          "type": "string"
        },
        "gopassName": {
          "type": "string"
        },
        "remarks": {
          "type": "string"
        }
      },
      "required": [
        "serviceLevelAgreement"
      ],
      "additionalProperties": false
    },
    "controlPlane": {
      "type": "object",
      "properties": {
        "flavor": {
          "type": "string"
        },
        "singleNode": {
          "type": "boolean"
        },
        "securityGroups": {
          "$ref": "#/$defs/securityGroups"
        },
        "nodeDrainTimeout": {
          "$ref": "#/$defs/nodeDrainTimeout"
        }
      },
      "required": [
        "flavor"
      ],
      "additionalProperties": false
    },
    "cloud": {
      "type": "string"
    },
    "version": {
      "type": "object",
      "properties": {
        "major": {
          "type": "integer"
        },
        "minor": {
          "type": "integer"
        },
        "patch": {
          "type": "integer"
        }
      },
      "required": [
        "major",
        "minor",
        "patch"
      ],
      "additionalProperties": false
    },
    "workers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "replicas": {
            "type": "integer",
            "minimum": 0
          },
          "availabilityZone": {
            "type": "string"
          },
          "flavor": {
            "type": "string"
          },
          "securityGroups": {
            "$ref": "#/$defs/securityGroups"
          },
          "nodeDrainTimeout": {
            "$ref": "#/$defs/nodeDrainTimeout"
          }
        },
        "additionalProperties": false,
        "required": [
          "replicas",
          "availabilityZone",
          "flavor"
        ]
      }
    },
    "bastion": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "availabilityZone": {
          "type": [
            "null",
            "string"
          ]
        },
        "sshKeyName": {
          "type": [
            "null",
            "string"
          ]
        }
      },
      "additionalProperties": false
    },
    "containerRegistryProxy": {
      "type": "object",
      "properties": {
        "additionallyProxiedRegistries": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "proxyRegistryEndpoint": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "sshKeyName": {
      "type": [
        "string",
        "null"
      ]
    },
    "cni": {
      "type": "string",
      "enum": [
        "cilium",
        "calico"
      ]
    },
    "common": {
      "type": "object",
      "description": "Values for sub-chart"
    }
  },
  "required": [
    "metadata",
    "version",
    "controlPlane",
    "workers"
  ],
  "additionalProperties": false,
  "$defs": {
    "securityGroups": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "nodeDrainTimeout": {
      "type": "string",
      "default": "3m",
      "pattern": "[0-9]+[smh]"
    }
  }
}
