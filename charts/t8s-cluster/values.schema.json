{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "t8s cluster configuration",
  "properties": {
    "global": {
      "properties": {
        "helmRepositories": {
          "type": "object",
          "description": "A map of helmRepositories to create, the key is the name",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "pattern": "https://.+"
              },
              "charts": {
                "type": "object",
                "description": "Which charts are deployed in which version using this repo, used internally",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "condition": {
                "$ref": "#/$defs/condition"
              }
            },
            "additionalProperties": false
          }
        },
        "kubectl": {
          "type": "object",
          "description": "Image with `kubectl` binary",
          "properties": {
            "image": {
              "$ref": "#/$defs/image"
            }
          },
          "additionalProperties": false
        },
        "etcd": {
          "type": "object",
          "description": "Image with `kubectl` binary",
          "properties": {
            "image": {
              "$ref": "#/$defs/image"
            }
          },
          "additionalProperties": false
        },
        "semver": {
          "type": "object",
          "description": "Image with `semver` binary",
          "properties": {
            "image": {
              "$ref": "#/$defs/image"
            }
          },
          "additionalProperties": false
        },
        "injectedCertificateAuthorities": {
          "type": "string"
        },
        "kubeletExtraConfig": {
          "type": "object",
          "description": "Additional kubelet configuration",
          "properties": {
            "maxParallelImagePulls": {
              "type": "integer",
              "description": "Only valid for k8s version 1.27 and later. The number of images to pull in parallel."
            }
          },
          "additionalProperties": false
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "serviceLevelAgreement": {
          "type": "string",
          "enum": [
            "None",
            "24x7",
            "WorkingHours"
          ]
        },
        "customerID": {
          "type": "integer"
        },
        "customerName": {
          "type": "string"
        },
        "friendlyName": {
          "type": "string"
        },
        "supportProjectUrl": {
          "type": "string"
        },
        "configGroupUrl": {
          "type": "string"
        },
        "gopassName": {
          "type": "string"
        },
        "remarks": {
          "type": "string"
        }
      },
      "required": [
        "serviceLevelAgreement"
      ],
      "additionalProperties": false
    },
    "controlPlane": {
      "type": "object",
      "properties": {
        "flavor": {
          "type": "string"
        },
        "singleNode": {
          "type": "boolean"
        },
        "additionalSecurityGroups": {
          "$ref": "#/$defs/securityGroups"
        },
        "allowedCIDRs": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^((25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)\\.){3}(25[0-5]|2[0-4]\\d|1\\d\\d|[1-9]?\\d)(/([0-9]|[1-2][0-9]|3[0-2]))?$"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "flavor"
      ],
      "additionalProperties": false
    },
    "cloud": {
      "type": "string"
    },
    "version": {
      "type": "object",
      "properties": {
        "major": {
          "type": "integer",
          "const": 1
        },
        "minor": {
          "type": "integer",
          "description": "The minor version of the k8s cluster. Must be below 29, as CAPO does not support 1.29 yet.",
          "minimum": 25,
          "maximum": 28
        },
        "patch": {
          "type": "integer"
        }
      },
      "required": [
        "major",
        "minor",
        "patch"
      ],
      "additionalProperties": false
    },
    "nodePools": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "replicas": {
            "type": "integer",
            "minimum": 0
          },
          "availabilityZone": {
            "type": "string"
          },
          "flavor": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "replicas",
          "flavor"
        ]
      }
    },
    "additionalComputePlaneSecurityGroups": {
      "$ref": "#/$defs/securityGroups"
    },
    "bastion": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "availabilityZone": {
          "type": [
            "null",
            "string"
          ]
        },
        "sshKeyName": {
          "type": [
            "null",
            "string"
          ]
        }
      },
      "additionalProperties": false
    },
    "containerRegistryMirror": {
      "type": "object",
      "properties": {
        "additionallyMirroredRegistries": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mirrorEndpoint": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "sshKeyName": {
      "type": [
        "string",
        "null"
      ]
    },
    "cni": {
      "type": "string",
      "enum": [
        "cilium",
        "calico"
      ]
    },
    "openstackImageNamePrefix": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "description": "Values for sub-chart"
    }
  },
  "required": [
    "metadata",
    "version",
    "controlPlane",
    "openstackImageNamePrefix",
    "nodePools"
  ],
  "additionalProperties": false,
  "$defs": {
    "securityGroups": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "string",
          "description": "The host of the registry",
          "examples": [
            "docker.io"
          ]
        },
        "repository": {
          "type": "string",
          "description": "The image path in the registry",
          "examples": [
            "bitnami/kubectl"
          ]
        },
        "tag": {
          "type": "string"
        },
        "digest": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "condition": {
      "type": "string",
      "description": "A condition with which to decide to include the resource. This will be templated. Must return a truthy value",
      "examples": [
        "{{ true }}",
        "{{ eq .Values.global.baseDomain \"teuto.net\" }}"
      ]
    }
  }
}
