{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "cnpg-wrapper configuration",
  "required": [
    "roles",
    "databases"
  ],
  "properties": {
    "podMonitorLabels": {
      "type": "object",
      "description": "The labels to set on ServiceMonitor which the prometheus uses to search for",
      "additionalProperties": {
        "type": "string"
      }
    },
    "instances": {
      "type": "integer",
      "minimum": 1
    },
    "globalExtensions": {
      "type": "object",
      "description": "map of PostgreSQL extensions for this database",
      "additionalProperties": {
        "type": "object",
        "required": [],
        "properties": {
          "version": {
            "type": "string",
            "description": "optional extension version"
          },
          "schema": {
            "type": "string",
            "description": "name of the schema for the extension"
          }
        },
        "additionalProperties": false
      }
    },
    "databases": {
      "oneOf": [
        {
          "type": "string",
          "description": "YAML string representation (used by Flux)"
        },
        {
          "type": "object",
          "description": "key is database name; value can be an owner string or an object with owner and extensions",
          "additionalProperties": {
            "oneOf": [
              {
                "type": "string",
                "description": "database owner (simple form)"
              },
              {
                "type": "object",
                "properties": {
                  "owner": {
                    "type": "string",
                    "description": "database owner name"
                  },
                  "extensions": {
                    "type": "object",
                    "description": "map of PostgreSQL extensions for this database",
                    "additionalProperties": {
                      "type": "object",
                      "required": [],
                      "properties": {
                        "version": {
                          "type": "string",
                          "description": "optional extension version"
                        },
                        "schema": {
                          "type": "string",
                          "description": "name of the schema for the extension"
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "schemas": {
                    "type": "object",
                    "description": "schemas to be created for the database",
                    "additionalProperties": {
                      "type": "object",
                      "required": [],
                      "properties": {
                        "owner": {
                          "type": "string",
                          "description": "owner of the schema"
                        }
                      },
                      "additionalProperties": false
                    }
                  }
                },
                "required": ["owner"],
                "additionalProperties": false
              }
            ]
          }
        }
      ]
    },
    "roles": {
      "oneOf": [
        {
          "type": "string",
          "description": "should only be used by flux"
        },
        {
          "type": "array",
          "additionalItems": {
            "type": "object",
            "description": "see cnpg: https://cloudnative-pg.io/documentation/1.25/declarative_role_management/",
            "properties": {
              "name": {
                "type": "string"
              },
              "ensure": {
                "type": "string",
                "enum": [
                  "present",
                  "absent"
                ]
              },
              "login": {
                "type": "boolean"
              },
              "superuser": {
                "type": "boolean"
              },
              "passwordSecret": {
                "description": "If using an existing one, then you have to have the fields username and password set",
                "properties": {
                  "exists": {
                    "description": "pass existing secret with database password to be used instead of generating a new one",
                    "type": "boolean"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            },
            "required": [
              "name"
            ]
          }
        }
      ]
    },
    "logLevel": {
      "type": "string",
      "enum": [
        "error",
        "warning",
        "info",
        "debug",
        "trace"
      ]
    },
    "storageSize": {
      "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/master/master-standalone-strict/_definitions.json#/definitions/io.k8s.apimachinery.pkg.api.resource.Quantity"
    },
    "backup": {
      "type": "object",
      "required": [
        "s3"
      ],
      "description": "See: https://cloudnative-pg.io/documentation/1.16/backup_recovery/",
      "properties": {
        "schedule": {
          "type": "string",
          "description": "cron syntax",
          "examples": [
            "0 0 0 * * *"
          ]
        },
        "s3": {
          "type": "object",
          "required": [
            "path",
            "endpointURL"
          ],
          "description": "s3 related options",
          "properties": {
            "path": {
              "type": "string",
              "description": "s3 path to write files to"
            },
            "endpointURL": {
              "type": "string",
              "description": "url of the api endpoint"
            },
            "secret": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "accessKeyId": {
                  "type": "string",
                  "default": "ACCESS_KEY_ID"
                },
                "accessSecretKey": {
                  "type": "string",
                  "default": "ACCESS_SECRET_KEY"
                }
              },
              "additionalProperties": false,
              "required": [
                "name"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "databaseImage": {
      "type": "object",
      "description": "For postgis see this link: https://github.com/cloudnative-pg/postgis-containers/pkgs/container/postgis",
      "properties": {
        "registry": {
          "type": "string",
          "description": "The host of the registry",
          "examples": [
            "ghcr.io"
          ]
        },
        "repository": {
          "type": "string",
          "description": "The image path in the registry",
          "examples": [
            "cloudnative-pg/postgresql"
          ]
        },
        "tag": {
          "type": "string",
          "description": "For available tags see: https://github.com/cloudnative-pg/postgres-containers/pkgs/container/postgresql",
          "examples": [
            "15.6",
            "16.1",
            "17.2"
          ]
        },
        "digest": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
