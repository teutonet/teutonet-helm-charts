{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "cnpg-wrapper configuration",
  "required": [
    "roles",
    "databases"
  ],
  "properties": {
    "podMonitorLabels": {
      "type": "object",
      "description": "The labels to set on ServiceMonitor which the prometheus uses to search for",
      "additionalProperties": {
        "type": "string"
      }
    },
    "instances": {
      "type": "integer",
      "minimum": 1
    },
    "databases": {
      "oneOf": [
        {
          "type": "string",
          "description": "should only be used by flux"
        },
        {
          "type": "object",
          "description": "key is database name and value is owner",
          "additionalProperties": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "description": "key is database name and value is a dictionary with part of https://cloudnative-pg.io/docs/1.28/cloudnative-pg.v1#databasespec",
          "additionalProperties": {
            "type": "object",
            "required": ["owner"],
            "properties": {
              "owner": {
                "type": "string"
              },
              "schemas": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "owner"],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "ensure": {
                      "type": "string",
                      "default": "present",
                      "enum": ["present", "absent"]
                    },
                    "owner": {
                      "type": "string"
                    }
                  }
                }
              },
              "extensions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name"],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "ensure": {
                      "type": "string",
                      "default": "present",
                      "enum": ["present", "absent"]
                    },
                    "version": {
                      "type": "string"
                    },
                    "schema": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      ]
    },
    "roles": {
      "oneOf": [
        {
          "type": "string",
          "description": "should only be used by flux"
        },
        {
          "type": "array",
          "additionalItems": {
            "type": "object",
            "description": "see cnpg: https://cloudnative-pg.io/documentation/1.25/declarative_role_management/",
            "properties": {
              "name": {
                "type": "string"
              },
              "ensure": {
                "type": "string",
                "enum": [
                  "present",
                  "absent"
                ]
              },
              "login": {
                "type": "boolean"
              },
              "superuser": {
                "type": "boolean"
              },
              "passwordSecret": {
                "description": "If using an existing one, then you have to have the fields username and password set",
                "properties": {
                  "exists": {
                    "description": "pass existing secret with database password to be used instead of generating a new one",
                    "type": "boolean"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            },
            "required": [
              "name"
            ]
          }
        }
      ]
    },
    "logLevel": {
      "type": "string",
      "enum": [
        "error",
        "warning",
        "info",
        "debug",
        "trace"
      ]
    },
    "storageSize": {
      "$ref": "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/master/master-standalone-strict/_definitions.json#/definitions/io.k8s.apimachinery.pkg.api.resource.Quantity"
    },
    "backup": {
      "type": "object",
      "required": [
        "s3"
      ],
      "description": "See: https://cloudnative-pg.io/documentation/1.16/backup_recovery/",
      "properties": {
        "schedule": {
          "type": "string",
          "description": "cron syntax",
          "examples": [
            "0 0 0 * * *"
          ]
        },
        "s3": {
          "type": "object",
          "required": [
            "path",
            "endpointURL"
          ],
          "description": "s3 related options",
          "properties": {
            "path": {
              "type": "string",
              "description": "s3 path to write files to"
            },
            "endpointURL": {
              "type": "string",
              "description": "url of the api endpoint"
            },
            "secret": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "accessKeyId": {
                  "type": "string",
                  "default": "ACCESS_KEY_ID"
                },
                "accessSecretKey": {
                  "type": "string",
                  "default": "ACCESS_SECRET_KEY"
                }
              },
              "additionalProperties": false,
              "required": [
                "name"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "databaseImage": {
      "type": "object",
      "description": "For postgis see this link: https://github.com/cloudnative-pg/postgis-containers/pkgs/container/postgis",
      "properties": {
        "registry": {
          "type": "string",
          "description": "The host of the registry",
          "examples": [
            "ghcr.io"
          ]
        },
        "repository": {
          "type": "string",
          "description": "The image path in the registry",
          "examples": [
            "cloudnative-pg/postgresql"
          ]
        },
        "tag": {
          "type": "string",
          "description": "For available tags see: https://github.com/cloudnative-pg/postgres-containers/pkgs/container/postgresql",
          "examples": [
            "15.6",
            "16.1",
            "17.2"
          ]
        },
        "digest": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
