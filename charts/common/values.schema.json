{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "common defs",
  "additionalProperties": false,
  "$defs": {
    "resourcesPreset": {
      "type": "string",
      "enum": [
        "none",
        "nano",
        "micro",
        "small",
        "medium",
        "large",
        "xlarge",
        "2xlarge"
      ]
    },
    "helmRepositories": {
      "type": "object",
      "description": "A map of helmRepositories to create, the key is the name",
      "$defs": {
        "interval": {
          "type": "string",
          "description": "The interval in which to update the repository",
          "pattern": "[0-9]+[mhd]"
        }
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "condition": {
            "$ref": "#/$defs/condition"
          },
          "type": {
            "type": "string",
            "enum": [
              "git",
              "helm"
            ],
            "default": "helm"
          }
        },
        "oneOf": [
          {
            "properties": {
              "url": {
                "type": "string",
                "pattern": "(https|oci)://.+"
              },
              "condition": {
                "$ref": "#/$defs/condition"
              },
              "interval": {
                "$ref": "#/$defs/helmRepositories/$defs/interval"
              },
              "charts": {
                "type": "object",
                "description": "Which charts are deployed in which version using this repo, used internally",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "type": {
                "type": "string",
                "enum": [
                  "helm"
                ]
              }
            },
            "oneOf": [
              {
                "not": {
                  "required": [
                    "type"
                  ]
                }
              },
              {
                "properties": {
                  "type": {
                    "const": "helm"
                  }
                },
                "required": [
                  "type"
                ]
              }
            ],
            "additionalProperties": false
          },
          {
            "properties": {
              "url": {
                "type": "string",
                "pattern": "https://.+"
              },
              "condition": {
                "$ref": "#/$defs/condition"
              },
              "type": {
                "const": "git"
              },
              "charts": {
                "type": "object",
                "description": "Which charts are deployed in which version using this repo, used internally",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "branch": {
                      "type": "string"
                    },
                    "commit": {
                      "type": "string"
                    },
                    "semver": {
                      "type": "string"
                    },
                    "tag": {
                      "type": "string"
                    },
                    "path": {
                      "type": "string",
                      "description": "Path of the chart in the repository"
                    },
                    "interval": {
                      "$ref": "#/$defs/helmRepositories/$defs/interval"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "branch"
                      ]
                    },
                    {
                      "required": [
                        "commit"
                      ]
                    },
                    {
                      "required": [
                        "semver"
                      ]
                    },
                    {
                      "required": [
                        "tag"
                      ]
                    },
                    {
                      "not": {
                        "anyOf": [
                          {
                            "required": [
                              "branch"
                            ]
                          },
                          {
                            "required": [
                              "commit"
                            ]
                          },
                          {
                            "required": [
                              "semver"
                            ]
                          },
                          {
                            "required": [
                              "tag"
                            ]
                          }
                        ]
                      }
                    }
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "type"
            ]
          }
        ],
        "required": [
          "url"
        ]
      }
    },
    "condition": {
      "type": "string",
      "description": "A condition with which to decide to include the resource. This will be templated. Must return the literal `true`, truthy values don't work.",
      "examples": [
        "{{ true }}",
        "{{ eq .Values.global.baseDomain \"teuto.net\" }}"
      ]
    },
    "telemetry": {
      "type": "object",
      "properties": {
        "otlp": {
          "type": "object",
          "properties": {
            "endpoint": {
              "type": "string",
              "default": "auto",
              "examples": [
                "http://otel-collector:4317",
                "auto"
              ],
              "description": "'auto' tries to figure it out automatically"
            },
            "host": {
              "type": "string"
            },
            "port": {
              "type": "integer"
            },
            "insecure": {
              "type": "boolean"
            }
          }
        }
      }
    }
  },
  "properties": {
    "global": {
      "type": "object",
      "description": "global values for all charts",
      "properties": {
        "telemetry": {
          "$ref": "#/$defs/telemetry"
        },
        "helmRepositories": {
          "$ref": "#/$defs/helmRepositories"
        },
        "networkPolicy": {
          "type": "object",
          "description": "Default network policy settings for all charts",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "auto",
                "cilium",
                "native",
                "none"
              ]
            }
          }
        }
      }
    },
    "common": {
      "type": "object",
      "description": "Values for sub-chart"
    }
  }
}
