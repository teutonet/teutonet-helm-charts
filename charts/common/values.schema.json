{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "common defs",
  "additionalProperties": false,
  "$defs": {
    "resourcesPreset": {
      "type": "string",
      "enum": [
        "nano",
        "micro",
        "small",
        "medium",
        "large",
        "xlarge",
        "2xlarge"
      ]
    },
    "telemetry": {
      "type": "object",
      "properties": {
        "otlp": {
          "type": "object",
          "properties": {
            "endpoint": {
              "type": "string",
              "default": "auto",
              "examples": [
                "http://otel-collector:4317",
                "auto"
              ],
              "description": "'auto' tries to figure it out automatically"
            },
            "insecure": {
              "type": "boolean"
            }
          }
        }
      }
    }
  },
  "properties": {
    "global": {
      "type": "object",
      "description": "global values for all charts",
      "properties": {
        "telemetry": {
          "$ref": "#/$defs/telemetry"
        }
      }
    },
    "common": {
      "type": "object",
      "description": "Values for sub-chart"
    }
  }
}
